{
	"compilerOptions": {
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"target": "ES6",
		"module": "CommonJS",
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"rootDir": "./src",
		"outDir": "./lib",
		"sourceRoot": "./",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exlude": [
		"node_modules"
	]
}
